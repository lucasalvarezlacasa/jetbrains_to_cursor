{
    "window.commandCenter": true,
    "window.zoomLevel": 1.4,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.unusedImports": "explicit"
    },
    "workbench.colorTheme": "PyCharm Dark+ Theme",
    "workbench.colorCustomizations": {
        "diffEditor.insertedTextBackground": "#052D0E80",
        "diffEditor.insertedLineBackground": "#052D0E80",
        "diffEditor.removedTextBackground": "#330A0A80",
        "diffEditor.removedLineBackground": "#330A0A80",
        "editorGutter.addedBackground": "#052D0E80",
        "editorGutter.deletedBackground": "#330A0A80",
        "gitDecoration.addedResourceForeground": "#052D0E80",
        "gitDecoration.deletedResourceForeground": "#330A0A80"
    },
    "workbench.tree.indent": 13,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.inheritEnv": false,
    "debug.console.fontSize": 12,
    "testing.messageFont.size": 12,
    "git.confirmSync": false,
    "git.autofetch": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.tox": true,
        "**/build": true,
        "**/ai_orchestrator.egg-info": true,
        "**/app.egg-info": true,
        "**/.idea": true
    },
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "black-formatter.args": [
            "--line-length",
            "120"
        ]
    }
}